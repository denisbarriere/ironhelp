<% if( onProfile ) { %>
  <section class="media">
<% } else { %>
  <section class="media user-list">
<% } %>
    <figure class="media-left">
    <p class="image is-128x128">
      <img src="<%= user.imageUrl %>">
    </p>
  </figure>
  <div class="media-content">
    <div class="content">
      <p>
        <% if( user.username ) { %>
          <strong><%= user.username.charAt(0).toUpperCase() %><%= user.username.slice(1) %></strong>
          <span> &nbsp; </span>
          <span class="icon is-small is-left">
            <i class="fa fa-envelope"></i>
          </span>
          <small><%= user.email %></small> 
        <% } else { %>
        <span class="icon is-small is-left">
          <i class="fa fa-envelope"></i>
        </span>
        <strong><%= user.email %></strong> 
        <% } %>
        
        <% if( isUserAdmin ) { %>
          <span> &nbsp; </span>
          <% if( user.role === 'ADMIN' ) { %>
            <span class="tag is-warning"><%= user.role %></span>
          <% } else { %>
            <span class="tag is-info"><%= user.role %></span>
          <% } %>
        <% } %>

        <% if( user.bio ) { %>
          <p><%= user.bio %></p>
        <% } %>
          
      </p>
    </div>
    <nav class="level is-mobile">
      <div class="level-left">
          <a class="button is-primary level-item" href="/profile/<%= user._id %>/edit">Edit</a>
          <% if( isUserAdmin ) { %>
          <a class="button is-danger level-item" href="/admin/delete/<%= user._id %>">Delete</a>
          <% } %>
      </div>
    </nav>
  </div>
</section>