<h1>Post!</h1>
<h2>
     <%= selectedTool %> 
</h2>
<h2>
    <%= currentUser.user._id %>
</h2>

<form action="/posts" method="post">
    <div class="field">
        <label class="label">Title</label>
        <p class="control">
            <input class="input" type="text" placeholder="title" name="title">
        </p>
    </div>

    <div class="field">
        <label class="label">Category</label>
        <p class="control">
            <span class="select">
      <select name="category">
          <option>Select dropdown</option>
       
        <% categories.forEach( category => { %>
            <option value="<%= category._id %>"><%= category.name %></option>
        <% }); %>  
        
      </select>
    </span>
        </p>
    </div>

    <div class="field">
        <label class="label">Tool</label>
        <p class="control">
            <span class="select">
      <select name="tool">
          <option>Select dropdown</option>
       
          <% tools.forEach( tool => { %>
            <option value="<%= tool._id %>"><%= tool.name %></option>
        <% }); %> 

        
      </select>
    </span>
        </p>
    </div>

    <div class="field">
        <label class="label">Summary</label>
        <p class="control">
            <textarea class="textarea" placeholder="Description" name="summary"></textarea>
        </p>
    </div>

    <div class="field">
        <label class="label">Content</label>
        <p class="control">
            <textarea class="textarea" placeholder="Content" name="content"></textarea>
        </p>
    </div>

    <div class="field is-grouped">
        <p class="control">
            <button class="button is-primary">Submit</button>
        </p>
        <p class="control">
            <button class="button is-link">Cancel</button>
        </p>
    </div>

</form>