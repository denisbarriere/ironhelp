<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <title><%= title %></title>
    <!-- Favicon -->
    <link rel="shortcut icon" href="/images/favicon.ico">

    <!-- Vue.js -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/vue/2.4.1/vue.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.16.2/axios.min.js"></script>

    <!-- JQuery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

    <!-- FontAwsome -->
    <script src="https://use.fontawesome.com/5bf170abf6.js"></script>

    <!-- CSS -->
    <link rel="stylesheet" type="text/css" href="/stylesheets/bulma.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/style.css">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>
  <body>
    <%- include('../partials/navbar') %>
    <%- body -%>

    <script>
      function setMediaSize() { 
        let viewportWidth = $(window).width();
        if (viewportWidth < 768) {
          $(".media-left > p.image").removeClass("is-128x128").addClass("is-64x64");
        } else {
          $(".media-left > p.image").removeClass("is-64x64").addClass("is-128x128");
        }
      }
      $(document).ready(function() {
        setMediaSize();
        $('.navbar-burger').click(function() {
          $('.navbar-burger').toggleClass('is-active');
          $('#navMenuDocumentation').toggleClass('is-active');
        });
      });
      $(window).bind('resize', setMediaSize);
    </script>
  </body>
</html>