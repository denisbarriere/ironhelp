<h1>New Post!</h1>

<% if (isUserLoggedIn && isUserAdmin) { %>
  <form action='/admin/posts' method='post'>
<% } else { %>
  <form action='/profile/posts' method='post'>  
<% } %>
  <div class='field'>
        <label class='label'>Title</label>
        <p class='control'>
            <input class='input' type='text' placeholder='title' name='title' required>
        </p>
    </div>

    <div class='field'>
        <label class='label'>Category</label>
        <p class='control'>
            <span class='select'>
                <select name='category' required>
                    <option disabled selected value=''> Select Category</option>       
                    <% categories.forEach( category => { %>
                        <option value='<%= category._id %>'><%= category.name %></option>
                    <% }); %>  
                </select>
            </span>
        </p>
    </div>

    <div class='field'>
        <label class='label'>Tool</label>
        <p class='control'>
            <span class='select'>
                <select name='tool' required>
                    <option disabled selected value=''>Select Tool</option>
                    <% tools.forEach( tool => { %>
                        <option value='<%= tool._id %>' <% if(tool._id === selectedTool._id ) { %> selected <%}%> ><%= tool.name %></option>
                    <% }); %> 
                </select>
            </span>
        </p>
    </div>

    <div class='field'>
        <label class='label' required>Summary</label>
        <p class='control'>
            <textarea class='textarea' placeholder='Description' name='summary'></textarea>
        </p>
    </div>

    <div class='field'>
        <label class='label' required>Content</label>
        <p class='control'>
            <textarea class='textarea' placeholder='Content' name='content'></textarea>
        </p>
    </div>

    <div class='field is-grouped'>
        <p class='control'>
            <button type="submit" class='button is-primary'>Submit</button>
        </p>
        <p class='control'>
          <% if(isUserLoggedIn && isUserAdmin) { %>
            <a class='button is-link' href='/admin/posts'>Cancel</button>
          <% } else { %>
            <a class='button is-link' href='/'>Cancel</button>
          <% } %>
        </p>
    </div>

</form>